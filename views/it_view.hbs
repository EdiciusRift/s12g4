{{> navbar}}
 <style>
    body{
        background-image: url('img/cliffdive.jpg'); 
        background-size: 100% 100%; 
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>
<div class="container">
    <div class="row">
        {{#if review}}
        <div class="col-lg-1"></div>
        <div class="col-lg-2">
            <h2><a href="/itineraries" class="btn btn-primary btn-block" role="button" >Back to Itineraries</a></h2>
        </div>
        <div class="col-lg-2">
            <h2><a href="/it_edit" class="btn btn-success btn-block" role="button" id="viewEdit">Edit Itinerary</a></h2>
        </div>
        <div class="col-lg-2">
            <h2><a href="/download_it" class="btn btn-info btn-block" role="button" id="it_viewDownload" download>Download Itinerary</a></h2>
        </div>
        
        <div class="col-lg-2">
            <h2><a href="/viewReview" class="btn btn-warning btn-block" role="button" id="viewReview">View Review</a></h2>
        </div>
        <div class="col-lg-2">
            <h2><a href="/editReview" class="btn btn-danger btn-block" role="button" id="editReview">Edit Review</a></h2>
        </div>
        {{else}}
        <div class="col-lg-2"></div>
        <div class="col-lg-2">
            <h2><a href="/itineraries" class="btn btn-primary btn-block" role="button" >Back to Itineraries</a></h2>
        </div>
        <div class="col-lg-2">
            <h2><a href="/it_edit" class="btn btn-success btn-block" role="button" id="viewEdit">Edit Itinerary</a></h2>
        </div>
        <div class="col-lg-2">
            <h2><a href="/download_it" class="btn btn-info btn-block" role="button" id="it_viewDownload" download>Download Itinerary</a></h2>
        </div>
        <div class="col-lg-2">
            <h2><a href="/review" class="btn btn-warning btn-block" role="button" id="review">Write Review</a></h2>
        </div>
        {{/if}}
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3><mark>{{it_name}}</mark></h3>
                        <h3><mark>{{it_id}}</mark></h3>
                        <h4>{{it_sdate}} - {{it_edate}}</h4>
                        <h4>{{it_location}}</h4>
                    </div>
                
                <div class="panel-body">
                    <table class="table table-bordered">
                        <thead>
                             <tr>
                                <th>Activity Name</th>
                                <th>Date</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Estimated Cost</th>
                                <th>Address</th>
                                <th>Contact Person</th>
                                <th>Contact Number</th>
                                <th>Contact Email</th>
                                <th>Mode of Transportation</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each activity}}
                                <!--If handlebars for those fields that are not required-->
                                <tr>
                                    <td>{{name}}</td><!--required-->
                                    <td>{{dateFormat date}}</td><!--required-->
                                    {{#if stime}}
                                        <td>{{stime}}</td>
                                    {{else}}
                                        <td>-</td>
                                    {{/if}}
                                    {{#if etime}}
                                        <td>{{etime}}</td>
                                    {{else}}
                                        <td>-</td>
                                    {{/if}}
                                    {{#if cost}}
                                        <td>{{cost}}</td>
                                    {{else}}
                                        <td>-</td>
                                    {{/if}}
                                    {{#if address}}
                                        <td>{{address}}</td>
                                    {{else}}
                                        <td>-</td>
                                    {{/if}}
                                    {{#if cname}}
                                        <td>{{cname}}</td>
                                    {{else}}
                                        <td>-</td>
                                    {{/if}}
                                    {{#if cnum}}
                                        <td>{{cnum}}</td>
                                    {{else}}
                                        <td>-</td>
                                    {{/if}}
                                    {{#if cmail}}
                                        <td>{{cmail}}</td>
                                    {{else}}
                                        <td>-</td>
                                    {{/if}}
                                    {{#if transpo}}
                                        <td>{{transpo}}</td>
                                    {{else}}
                                        <td>-</td>
                                    {{/if}}
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>